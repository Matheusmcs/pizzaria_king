    (13, 'Visa', 'Débito', '1X'),
    (14, 'Mastercard', 'Crédito', '3X');

CREATE TABLE IF NOT EXISTS Promocoes (
    ID INT PRIMARY KEY,
    Nome VARCHAR(502),
    Validade VARCHAR(2100),
    Valor VARCHAR(215)
);

