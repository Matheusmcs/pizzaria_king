-- Selecionar ou criar um banco de dados
CREATE DATABASE IF NOT EXISTS BD_Pizzaria;

-- Usar o banco de dados selecionado
USE BD_Pizzaria;

CREATE TABLE IF NOT EXISTS Funcionarios (
    ID INT PRIMARY KEY,
    Nome VARCHAR(520),
    Cargo VARCHAR(1200),
    Turno VARCHAR(125)
);

-- Inserir dados na tabela
INSERT INTO Funcionarios (ID, Nome, Cargo, Turno)
VALUES
    (4, 'Flavio Flamengo', 'Zelador', '8:00 a 18:00'),
    (5, 'Mario', 'Pizzaiolo', '8:30 a 17:00'),
    (6, 'Ana', 'Atendente', '9:00 a 17:00');

CREATE TABLE IF NOT EXISTS Entregadores (
    ID INT PRIMARY KEY,
    Nome VARCHAR(502),
    Tempo_M VARCHAR(1200),
    Frete VARCHAR(152)
);

-- Inserir dados na tabela
INSERT INTO Entregadores (ID, Nome, Tempo_M, Frete)
