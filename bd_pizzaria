    (7, 'Mario', 'Pizzaiolo', '8:30 a 17:00'),
    (8, 'Ana', 'Atendente', '9:00 a 17:00');

CREATE TABLE IF NOT EXISTS Entregadores (
    ID INT PRIMARY KEY,
    Nome VARCHAR(502),
    Tempo_M VARCHAR(1200),
    Frete VARCHAR(152)
);

-- Inserir dados na tabela
