CREATE TABLE IF NOT EXISTS Cardapio (
    ID INT PRIMARY KEY,
    Nome VARCHAR(502),
    Preco VARCHAR(1002),
    Tempo_P VARCHAR(125)
);

-- Inserir dados na tabela
INSERT INTO Cardapio (ID, Nome, Preco, Tempo_P)
