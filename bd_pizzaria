    (10, 'Portuguesa', 'R$ 35,00', '35Min'),
    (11, 'Calabresa', 'R$ 29,90', '25Min');

CREATE TABLE IF NOT EXISTS Cardapio (
    ID INT PRIMARY KEY,
    Nome VARCHAR(502),
    Preco VARCHAR(1002),
    Tempo_P VARCHAR(125)
);

CREATE TABLE IF NOT EXISTS Forma_De_Pagamento (
    ID INT PRIMARY KEY,
    Bandeira VARCHAR(520),
    Tipo VARCHAR(1002),
    Vezes VARCHAR(152)
);

-- Inserir dados na tabela
INSERT INTO Forma_De_Pagamento (ID, Bandeira, Tipo, Vezes)
