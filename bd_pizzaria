CREATE TABLE IF NOT EXISTS Forma_De_Pagamento (
    ID INT PRIMARY KEY,
    Bandeira VARCHAR(520),
    Tipo VARCHAR(1002),
    Vezes VARCHAR(152)
);

-- Inserir dados na tabela
INSERT INTO Forma_De_Pagamento (ID, Bandeira, Tipo, Vezes)
VALUES
    (12, 'Mastercard', 'Crédito', '2X'),
    (13, 'Visa', 'Débito', '1X'),
    (14, 'American Express', 'Crédito', '3X');

CREATE TABLE IF NOT EXISTS Promocoes (
    ID INT PRIMARY KEY,
    Nome VARCHAR(502),
    Validade VARCHAR(2100),
    Valor VARCHAR(215)
);

